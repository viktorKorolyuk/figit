<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:id="@+id/TopNavLayout">

        <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/arcade_title"
            android:layout_toStartOf="@+id/arcade_title" />

        <TextView
                android:layout_width="167dp"
                android:layout_height="109dp"
                android:text="@string/arcadeTitle"
                android:id="@+id/arcade_title"
                android:textSize="40sp"

                android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#fff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guiLayout"
        android:paddingLeft="8dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/bu1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/bu2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bu1"
            android:layout_toEndOf="@+id/bu1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/bu3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bu2"
            android:layout_toEndOf="@+id/bu2" />
    </RelativeLayout>


</LinearLayout>